<div class="page">
    <div class="page_content">
        <div class="page_block">
            <header class="header">
                <div class="row">
                    <div class="col-3">
                        {{>logo }}
                    </div>

                    <nav class="header_nav col-9">
                        <div class="header_nav_right">
                            {{>nav list=header }}
                            {{!-- {{>nav list=header isVertical=true }} --}}
                        </div>
                    </nav>

                </div>

            </header>
            {{>divider }}
        </div>

        <div class="page_block">
            {{>hero title=hero.title text=hero.text }}
            {{!-- <h1 class="hero_title">{{hero.title}}</h1>
            <h1 class="hero_text">{{hero.text}}</h1> --}}
        </div>

        <div class="page_block">
            <main class="row g-0 plans">

                {{#each plans}}
                <div class="col plans_card">
                    {{>card data=this }}
                    {{!-- <div class="card">
                        <div class="card-header">{{name}}</div>
                        <div class="card-body">
                            <div class="card_block">
                                <span class="card_price_amount">
                                    $ {{price}}
                                </span>
                                <span class="card_price_duration"> / mo</span>
                            </div>

                            <div class="card_block">
                                {{#each features}}
                                <span class="card_description_item">{{this}}</span>
                                {{/each}}
                            </div>

                            <div class="card_block">
                                <button class="btn {{#if @first}}btn-outline-primary{{else}}btn-primary{{/if}} card_button">{{button}}</button>
                            </div>

                        </div>
                    </div> --}}
                    
                </div>
                {{/each}}

            </main>
        </div>




        <div class="page_block">
            {{>divider }}
            <footer>
                <div class="row footer">
                    <div class="col-3">
                        {{>logo }}
                        <span class="footer_coptright">Copyright 2023-24</span>
                    </div>
                    {{#each footer}}
                    <div class="col-3">
                        <span class="footer_title">{{title}}</span>
                        {{>nav list=links isVertical=true }}
                    </div>
                    {{/each}}

                </div>
            </footer>
        </div>
    </div>