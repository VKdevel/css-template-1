<div class="page">
    <div class="page_content">
        <div class="page_block">
            <header class="header">
                <div class="row">
                    <div class="col-3">
                        {{>logo }}
                    </div>

                    <nav class="header_nav col-9">
                        <div class="header_nav_right">
                            {{>nav list=header }}
                            {{!-- {{>nav list=header isVertical=true }} --}}
                        </div>
                    </nav>

                </div>

            </header>
            {{>divider }}
        </div>

        <div class="page_block">
            <div class="hero">
                {{#with hero}}
                {{>hero title=title text=text }}
                <a class="button" href="{{button.url}}">{{button.text}}</a>
                {{/with}}
            </div>
        </div>

        <div class="page_block">
            <div class="row g-4">
                {{#each preview}}
                <div class="col-6">
                    {{> cardPreview data=this}}
                </div>
                {{/each}}
            </div>
        </div>

