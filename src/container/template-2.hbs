        <div class="page_block">
            <main class="main">
                <div class="row">
                    <div class="col-12">
                        <div class="list_header">
                            <div class="row">
                                <div class="col-4">
                                    <h2 class="list_title">List of posts</h2>
                                </div>

                                <div class="col-8">
                                    <div class="category_list">
                                        {{#each categories}}
                                        <button class="category_button">{{text}}</button>
                                        {{/each}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-8">
                                <div class="list">
                                    {{#each news}}
                                    {{> cardPost data=this }}
                                    {{/each}}
                                </div>
                            </div>

                            <div class="col-4">
                                <aside class="list_aside">
                                    <div class="about">
                                        <h4 class="about_title">About</h4>
                                        <p class="about_text">{{about}}</p>
                                    </div>
                                   
                                    {{> linkList data=archive title="Archive"}}

