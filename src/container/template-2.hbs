                                    {{!-- <div class="link_list">
                                        <strong class="link_title">Archives</strong>

                                        <a href="#" class="link_item">link</a>
                                    </div> --}}
                                </aside>
                            </div>

                        </div>
                    </div>
                </div>
            </main>
        </div>



        <div class="page_block">
            {{>divider }}
            <footer>
                <div class="row footer">
                    <div class="col-3">
                        {{>logo }}
                        <span class="footer_coptright">Copyright 2023-24</span>
                    </div>
                    {{#each footer}}
                    <div class="col-3">
                        <span class="footer_title">{{title}}</span>
                        {{>nav list=links isVertical=true }}
                    </div>
                    {{/each}}

                </div>
            </footer>
        </div>
    </div>